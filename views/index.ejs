<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>

  <!-- CSS Section -->
  <link rel='stylesheet' href='/bootstrap/dist/css/bootstrap.min.css' />
  <link rel='stylesheet' href='/@fortawesome/fontawesome-free/css/all.min.css' />
  <link rel='stylesheet' href='/Content/app.css' />
</head>

<body>
  <!-- Main Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Portfolio - Wonsuk Cha</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto mb-2 mb-lg-0">

          <% if(title=='Home' ) { %>
            <li class="nav-item active">
              <% } else { %>
            <li class="nav-item">
              <% } %>
                <a class="nav-link" aria-current="page" href="/home">
                  <i class="fas fa-laptop-house"></i> Home
                </a>
            </li>

            <% if(title=='About Me' ) { %>
              <li class="nav-item active">
                <% } else { %>
              <li class="nav-item">
                <% } %>
                  <a class="nav-link" aria-current="page" href="/about">
                    <i class="fas fa-fingerprint"></i> About Me
                  </a>
              </li>

              <% if(title=='Projects' ) { %>
                <li class="nav-item active">
                  <% } else { %>
                <li class="nav-item">
                  <% } %>
                    <a class="nav-link" aria-current="page" href="/projects">
                      <i class="fas fa-tasks"></i> Projects
                    </a>
                </li>

                <% if(title=='Services' ) { %>
                  <li class="nav-item active">
                    <% } else { %>
                  <li class="nav-item">
                    <% } %>
                      <a class="nav-link" aria-current="page" href="/services">
                        <i class="fas fa-cogs"></i> Services
                      </a>
                  </li>

                  <% if(title=='Contact Me' ) { %>
                    <li class="nav-item active">
                      <% } else { %>
                    <li class="nav-item">
                      <% } %>
                        <a class="nav-link" aria-current="page" href="/contact">
                          <i class="fas fa-envelope"></i> Contact Me
                        </a>
                    </li>

        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container">
    <div>
      <h1>Hello <%= title %>
      </h1>
    </div>
  </main>


  <!-- Bottom Navigation -->
  <footer>
    <nav class="navbar fixed-bottom navbar-dark bg-dark">
      <h6 class="navbar-text"> &copy; Copyright 2021. All rights reserved. </h6>
    </nav>
  </footer>

  <!-- Script Section -->
  <script src='/jquery/dist/jquery.min.js'></script>
  <script src='/bootstrap/dist/js/bootstrap.min.js'></script>
  <script src='/Scripts/app.js'></script>
</body>

</html>